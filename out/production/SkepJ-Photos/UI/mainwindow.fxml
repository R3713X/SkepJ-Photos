<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainBorderPane" prefHeight="554.0" prefWidth="789.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.UserInterfaceController">
    <top>
        <MenuBar>
            <Menu text="Albums">
                <items>
                    <MenuItem onAction="#showCreateAlbumDialog" text="Create a new Album"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Edit Albums"/>
                    <MenuItem text="Create album sorted by Date"/>
                </items>
            </Menu>
            <Menu text="Photos Map"/>
            <Menu text="Settings">
                <MenuItem text="Empty for now"/>
                <SeparatorMenuItem/>
                <MenuItem text="Sign out"/>
            </Menu>
        </MenuBar>
    </top>
    <left>

        <BorderPane style="-fx-background-color: #dbe8ff ">

            <top>
                <Label fx:id="nameLabel" alignment="TOP_CENTER" layoutX="41.0" layoutY="14.0" prefHeight="27.0"
                       prefWidth="202.0" textAlignment="CENTER">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </top>
            <center>
                <ImageView fx:id="displayImageView" fitHeight="407.0" fitWidth="215.0" layoutX="14.0" layoutY="41.0"
                           pickOnBounds="true" preserveRatio="true"/>
            </center>
            <bottom>
                <HBox alignment="CENTER">
                    <children>
                        <Button text="Add to album" visible="false" onMouseClicked="#showAlbumPickerDialog" fx:id="chooseAlbumButton"/>
                    </children>
                </HBox>

            </bottom>

        </BorderPane>

    </left>
    <center>
        <ScrollPane hbarPolicy="NEVER">
            <TilePane fx:id="tilePane" hgap="25" tileAlignment="TOP_LEFT" vgap="15" BorderPane.alignment="CENTER">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </TilePane>
        </ScrollPane>

    </center>
    <bottom>
        <BorderPane>
            <center>
                <HBox alignment="BOTTOM_RIGHT" spacing="15" xmlns="http://javafx.com/javafx/8.0.121"
                      xmlns:fx="http://javafx.com/fxml/1">
                    <children>
                        <Label text="" fx:id="uploadPhotoNameLabel"></Label>
                        <Button contentDisplay="CENTER" layoutX="126.0" layoutY="417.0" mnemonicParsing="false"
                                onAction="#selectPhoto" prefHeight="26.0" prefWidth="94.0" text="Choose Image"/>
                        <Button alignment="CENTER_RIGHT" layoutX="432.0" layoutY="417.0" mnemonicParsing="false"
                                onAction="#uploadPhoto" prefHeight="26.0" prefWidth="94.0" text="Upload Image"/>

                    </children>
                </HBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" style="-fx-background-color: #ffffff ">
                    <children>
                        <Label fx:id="statusLabel"/>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>

    </bottom>
</BorderPane>
